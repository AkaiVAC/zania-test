{
	"compilerOptions": {
		"noEmit": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"verbatimModuleSyntax": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"outDir": "dist",
		"noImplicitAny": true,
		"baseUrl": ".",
	},
	"include": ["src"],
	"exclude": ["node_modules"],

}
